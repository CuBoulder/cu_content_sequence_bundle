/**
 * Implements hook_theme_registry_alter().
 *
 * Let Drupal know we have template files in the module.
 */
function cu_advanced_timeline_theme_registry_alter(&$theme_registry) {
  $module_path = drupal_get_path('module', 'cu_advanced_timeline');
  $theme_registry_copy = $theme_registry;
  _theme_process_registry($theme_registry_copy, 'phptemplate', 'theme_engine', 'bean', $module_path);
  $theme_registry += array_diff_key($theme_registry_copy, $theme_registry);
  $hooks = array('bean');
  foreach ($hooks as $h) {
	  if (isset($theme_registry[$h]['theme paths'])) {
	    $first_element = array_shift($theme_registry[$h]['theme paths']);
	    array_unshift($theme_registry[$h]['theme paths'], array_shift($theme_registry[$h]['theme paths']), $module_path);
  	}
  }
}

/**
 * Implements module_preprocess_entity().
 *
 * Prepare output for timelines.
 */
function cu_advanced_timeline_preprocess_entity(&$vars) {
  $entity_type = $vars['elements']['#entity_type'];
  $bundle = $vars['elements']['#bundle'];

  // Only preprocess slider beans.
  $events = array();
  if ($entity_type == 'bean' && $bundle == 'advanced_timeline') {
    $vars['theme_hook_suggestions'][] = 'bean__advanced_timeline__' . $vars['field_adv_timeline_display'][0]['value'];

    // Add css/js for simple horizontal timeline.
    if ($vars['field_adv_timeline_display'][0]['value'] == 'simple_horizontal') {
      drupal_add_js(drupal_get_path('module', 'cu_advanced_timeline') . '/js/cu-timeline-simple-horizontal.js');
      drupal_add_css(drupal_get_path('module', 'cu_advanced_timeline') . '/css/cu-timeline-simple-horizontal.css');
    }
    // Add css/js for advanced timeline.
    if ($vars['field_adv_timeline_display'][0]['value'] == 'advanced') {
      drupal_add_js(drupal_get_path('module', 'cu_advanced_timeline') . '/js/timeline-min.js');
      drupal_add_css(drupal_get_path('module', 'cu_advanced_timeline') . '/css/timeline.css');
    }

    // Prepare timeline data from field collection.
    $children = array_intersect_key($vars['elements']['field_adv_timeline_content'], element_children($vars['elements']['field_adv_timeline_content']));

    foreach ($children as $key => $child) {
      $child = current($child['entity']['field_collection_item']);
      // Prepare start date.
      $start_date = array();
      if (!empty($child['field_adv_tl_date'])) {
        $date = strtotime($child['field_adv_tl_date']['#items'][0]['value']);
        $start_date = array(
          'month' => date('n', $date),
          'day' => date('j', $date),
          'year' => date('Y', $date),
          'timestamp' => $date,
        );
      }
      if (!empty($child['field_adv_tl_display_date'])){
        $start_date['display_date'] = $child['field_adv_tl_display_date']['#items'][0]['value'];
      }
      // Prepare end date.
      $end_date = array();
      if (!empty($child['field_adv_tl_end_date'])) {
        $date = strtotime($child['field_adv_tl_end_date']['#items'][0]['value']);
        $end_date = array(
          'month' => date('n', $date),
          'day' => date('j', $date),
          'year' => date('Y', $date),
          'timestamp' => $date,
        );
      }
      if (!empty($child['field_adv_tl_display_end_date'])){
        $end_date['display_date'] = $child['field_adv_tl_display_end_date']['#items'][0]['value'];
      }
      // Initialize array for this timeline item.
      $events[$key] = array();
      // Add text to data.
      $events[$key]['text'] = array(
        'headline' => render($child['field_adv_tl_title']),
        'text' => $child['field_adv_tl_body'][0]['#markup'],
      );
      // Add group to data.
      if (!empty($child['field_adv_tl_group'])) {
        $events[$key]['group'] = $child['field_adv_tl_group']['#items'][0]['value'];
      }
      // Add photo to data.
      if (!empty($child['field_adv_tl_photos'])) {
        $events[$key]['media'] = array(
          'url' => image_style_url('medium', $child['field_adv_tl_photos'][0]['#item']['uri']),
          'alt' => $child['field_adv_tl_photos'][0]['#item']['alt'],
          'type' => 'image',
        );
      }
      // Add video to data
      if (!empty($child['field_adv_tl_video'])) {
        $events[$key]['media'] = array(
          'url' => $child['field_adv_tl_video'][0][0]['#url'],
          'type' => 'video',
          'rendered' => render($child['field_adv_tl_video']),
        );
      }
      // Add dates to data.
      if (!empty($start_date)) {
        $events[$key]['start_date'] = $start_date;
        $events[$key]['weight'] = $start_date['timestamp'];
      }
      else {
        $events[$key]['weight'] = $key;
      }
      if (!empty($end_date)) {
        $events[$key]['end_date'] = $end_date;
      }

      // Make label for simple h timeline
      if (!empty($start_date)) {
        if (!empty($start_date['display_date'])) {
          $events[$key]['label'] = $start_date['display_date'];
        }
        else {
          $events[$key]['label'] = date('n/j/Y', $start_date['timestamp']);
        }
      }
      else {
        $events[$key]['label'] = $key;
      }
      $events[$key]['data_index'] = str_pad($key + 1, 4, "0", STR_PAD_LEFT);
    }
    // Put all timeline data into array.
    $data = array(
      'events' => $events,
    );

    // Add timeline title/description/photo.
    if (!empty($vars['field_adv_timeline_title'])) {
      $data['title']['text']['headline'] = $vars['field_adv_timeline_title'][0]['value'];
      $vars['timeline_title'] = $vars['field_adv_timeline_title'][0]['value'];
    }
    if (!empty($vars['field_adv_timeline_description'])) {
      $data['title']['text']['text'] = $vars['field_adv_timeline_description'][0]['value'];
    }
    if (!empty($vars['field_adv_tl_photos'])) {
      $data['title']['media'] = array(
        'url' => image_style_url('medium', $vars['field_adv_tl_photos'][0]['uri']),
        'alt' => $vars['field_adv_tl_photos'][0]['alt'],
        'type' => 'image',
      );
    }

    // Encode timeline data as json for advanced timeline.
    $vars['json'] = json_encode($data);

    // Make timeline list view.
    $list = array();
    if ($vars['field_adv_timeline_display'][0]['value'] == 'advanced') {
      uasort($data['events'], 'drupal_sort_weight');
    }
    foreach ($data['events'] as $event) {
      $list[] = theme('adv_timeline_item', array('vars' => $event));
    }

    // Add data to variables so we can use them in tpl files.
    $vars['event_list'] = $list;
    $vars['events_data'] = $data;
    $vars['uid'] = $vars['bean']->bid;
    $vars['scale'] = $vars['field_adv_timeline_scale'][0]['value'];
  }

}

/**
 * Implements hook_theme().
 */
function cu_advanced_timeline_theme(&$existing, $type, $theme, $path) {
  $registry = array();
  $template_dir = drupal_get_path('module', 'cu_advanced_timeline') . '/templates';
  $registry['adv_timeline_item'] = array(
    'template' => 'adv-timeline-item',
    'path' => $template_dir,
    'render element' => 'elements',
  );
  return $registry;
}

/**
 * Implements hook_field_widget_form_alter.
 *
 * Make date fieds have no default value.
 * For some reason, new data fields have a value2 key.
 * If value2 exists, we can assume it's a new field.
 */
function cu_advanced_timeline_field_widget_form_alter(&$element, &$form_state, $context) {
  if (!empty($element['#entity_type']) && $element['#entity_type'] == 'field_collection_item') {
    if ($element['#field_name'] == 'field_adv_tl_date' && $element['#bundle'] == 'field_adv_timeline_content') {
      if (!empty($element['#default_value']['value2'])) {
        $element['#default_value']['value'] = '';
      }

    }
    if ($element['#field_name'] == 'field_adv_tl_end_date' && $element['#bundle'] == 'field_adv_timeline_content') {
      if (!empty($element['#default_value']['value2'])) {
        $element['#default_value']['value'] = '';
      }
    }
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 *
 * Add validation function.
 */
function cu_advanced_timeline_form_bean_form_alter(&$form, &$form_state, $form_id) {
  if ($form['#bundle'] == 'advanced_timeline') {
    $form['title']['#access'] = FALSE;
    $form['#validate'][] = 'cu_advanced_timeline_validate';
  }
}

/**
 * Vallidation function for cu_advanced_timeline_form_bean_form_alter().
 *
 * If timeline is set to advanced, make sure date fields are not empty.
 */
function cu_advanced_timeline_validate($form, &$form_state) {
  unset($form_state['values']['field_adv_timeline_content'][LANGUAGE_NONE]['add_more']);
  $items = $form_state['values']['field_adv_timeline_content'][LANGUAGE_NONE];

  if ($form_state['values']['field_adv_timeline_display'][LANGUAGE_NONE][0]['value'] == 'advanced') {
    foreach ($items as $key => $item) {
      if (!$item['field_adv_tl_date'][LANGUAGE_NONE][0]['value']) {
        form_set_error('field_adv_timeline_content][' . LANGUAGE_NONE . '][' . $key . '][field_adv_tl_date', 'Timeline item "' . $title . '" requires a date if the timeline display is set to "Advanced".');
      }
    }
  }
}

